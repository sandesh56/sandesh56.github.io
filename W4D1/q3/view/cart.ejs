<!DOCTYPE html>
<html lang="en">
    <style>
        #box{
            padding:1rem;
            border:1px solid gray;
            border-radius: 10px;
            overflow:hidden;
            height:30%;
            width:30%;
        }
        .container{
            height:100vh;
            width:50%;
            padding:2rem;
        }
        #image{
            height:50%;
            width:50%;
        }
        
    </style>
        <div class="container">
           <% for(let item of items){%> 
            <div id="box">
                <image id="image" src="<%= item?.image %>" alt="items" />
                <h3><%= item?.name %></h3>
                <p><%= item?.description %></p>
                <h5>Price: <%= item?.price %></h5>
             </div>
           <%} %>
        </div>
</html>